#include <stdio.h>
int main() 
{
    double rainfall, riverFlow;
    printf("Enter rainfall (in mm): ");
    scanf("%lf", &rainfall);

    printf("Enter river flow (in m3/s): ");
    scanf("%lf", &riverFlow);

    if (rainfall < 50 && riverFlow < 200)
    {
        printf("Risk Level: Low Risk\n");
    }
    else if (rainfall >= 50 && rainfall <= 100 &&
             riverFlow >= 200 && riverFlow <= 500)
    {
        printf("Risk Level: Moderate Risk\n");
    }
    else if (rainfall > 100 && rainfall <= 150 &&
             riverFlow > 500 && riverFlow <= 800) 
    {
        printf("Risk Level: High Risk\n");
    }
    else if (rainfall > 150 && riverFlow > 800) 
    {
        printf("Risk Level: Severe Risk â€“ Evacuate!\n");
    }
    else
    {
        printf("Conditions do not match exactly with NDMA risk levels.\n");
    }
    return 0;
}
