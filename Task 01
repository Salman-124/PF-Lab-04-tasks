#include <stdio.h>

int main()
{
    int a;  
    printf("Enter the number:");
    scanf("%d",&a);
    if(a>0)
    {    
        printf("%d is a positive number");
    }
    else if(a<0)
    { 
        printf("-%d is a negative number");
    }
    else
    {
        printf("%d is a equal to zero");
        
    }
    return 0;
}
