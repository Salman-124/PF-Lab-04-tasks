#include <stdio.h>
int main()
{
    int units;
    double bill;
    printf("Enter the number of electricity units consumed: ");
    scanf("%d", &units);
    
    if (units <= 100) 
    {
        bill = units * 10;
    }
    else if (units <= 300) 
    {
        bill = units * 15;
    }
    else if (units <= 500)
    {
        bill = units * 20;
    }
    else 
    {
        bill = units * 25;
    }
    printf("Total Electricity Bill = PKR %.2lf\n", bill);
    return 0;
}
